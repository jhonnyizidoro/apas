extends templates/main
block Content
	form.default
		img.default__image(src="/images/no-image.png", alt="Selecione uma imagem", title="Selecione uma imagem")
		.default__group
			input.default__input(type="text", name="title", placeholder="Título da notícia", aria-label="Título da notícia")
			button.button.button--orange(aria-label="Clique para selecionar uma imagem", type="button") SELECIONAR IMAGEM #[.button--icon.icon.icon--image]
		textarea(name="content", placeholder="Conteúdo da notícia", aria-label="Insira o conteúdo da notícia")

block Scripts
	script(src="/tinymce/tinymce.min.js")
	script.
		window.addEventListener('load', function () {
			Admin.tinyMCE();
		});